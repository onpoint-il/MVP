<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/SplashLayout"
    android:background="@color/colorPrimary"
    tools:context=".SplashActivity">
<ImageView
    android:layout_width="250dp"
    android:layout_height="200dp"
    android:layout_gravity="center"
    android:id="@+id/CompLogo"
    android:layout_centerHorizontal="true"
    android:src="@drawable/onpointlogowhite"
    android:contentDescription="Company Logo"/>
   <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_gravity="center"
       android:id="@+id/Welcome"
       android:textSize="38sp"
       android:textColor="#fff"
       android:textStyle="bold"
       android:layout_below="@+id/CompLogo"
       android:layout_centerHorizontal="true"
       android:text="Welcome Back"
       />
   <FrameLayout
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginTop="50dp"
       android:background="#fff"
       android:padding="20dp"
       android:layout_below="@+id/Welcome"
       android:layout_centerHorizontal="true"
       android:id="@+id/GoogleSign"
       android:visibility="visible">
       <ImageView
           android:layout_width="40dp"
           android:layout_height="40dp"
           android:contentDescription="Google"
           android:src="@drawable/google_g_logo" />
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Google Sign In"
           android:layout_marginLeft="50dp"
           android:textSize="20sp"
           android:layout_gravity="center_vertical"/>
   </FrameLayout>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="#fff"
        android:padding="20dp"
        android:layout_gravity="center"
        android:id="@+id/AnonSign"
        android:layout_below="@+id/GoogleSign"
        android:layout_centerHorizontal="true"
        android:visibility="visible">
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:contentDescription="Anon"
            android:src="@drawable/custom_account" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="App Account Sign in"
            android:layout_marginStart="50dp"
            android:textSize="20sp"
            android:layout_gravity="center_vertical"/>
    </FrameLayout>
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="#fff"
        android:padding="20dp"
        android:layout_gravity="center"
        android:id="@+id/AnonSignUp"
        android:layout_below="@+id/AnonSign"
        android:layout_centerHorizontal="true"
        android:visibility="visible">
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:contentDescription="Anon"
            android:src="@drawable/custom_account" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create Account"
            android:layout_marginStart="50dp"
            android:textSize="20sp"
            android:layout_gravity="center_vertical"/>
    </FrameLayout>


</RelativeLayout>